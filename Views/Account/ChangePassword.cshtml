@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Смена пароля</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted text-center">
                        Update your password to keep your account secure. Ensure your new password meets security requirements.
                    </p>
                    <hr />
                    <form method="post" asp-action="ChangePassword" asp-controller="Account">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="CurrentPassword" class="form-label">Текущий пароль</label>
                            <input asp-for="CurrentPassword" class="form-control" placeholder="Введите текущий пароль" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="NewPassword" class="form-label">Новый пароль</label>
                            <input asp-for="NewPassword" class="form-control" placeholder="Введите новый пароль" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Подтверждение нового пароля</label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Подтвердите новый пароль" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Изменить пароль</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>